@model IEnumerable<SubForumVM>

@{
    ViewData["Title"] = "Forum Page";
}

<div class="text-center">
    <h1 class="display-4">Forum</h1>
    <p>Below will be a list of the subforums</p>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <h2>@item.SubForumName</h2>

            @foreach(var i in item.Topics)
            {
                <p>@i.TopicName <a asp-controller="Topic" asp-action="Index" asp-route-id="@i.TopicId">Go to Topic</a></p>
            }
        }
    }
    else
    {
        <p>No subforums exist.</p>
    }
</div>

